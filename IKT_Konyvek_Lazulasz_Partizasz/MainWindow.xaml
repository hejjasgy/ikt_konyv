        <TextBox HorizontalAlignment="Left" Margin="362,395,0,0" TextWrapping="Wrap" Name="StockTextBox" Text="" VerticalAlignment="Top" Width="120"/>

        <ProgressBar Margin="0,0,0,0" VerticalAlignment="Top" Width="550" Height="10" IsIndeterminate="True"></ProgressBar>
        <Label x:Name="StatusTextView" Content="" HorizontalAlignment="Left" Margin="265,334,0,0" VerticalAlignment="Top"/>

    </Grid>
